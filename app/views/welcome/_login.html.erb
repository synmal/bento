<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
   <div class="modal-dialog" role="document">
     <div class="modal-content">

       <div class="modal-header">
         <h5 class="modal-title" id="exampleModalLabel">Log in into Bento</h5>
         <button type="button" class="close" data-dismiss="modal" aria-label="Close" >
           <span aria-hidden="true">&times;</span>
         </button>
       </div>

       <div class="modal-body">
         <%= form_for :session, url: session_path, html: {id: "login_form"} do |form| %>
           <div class="text-field" style="height: 4rem;">
             <%= form.text_field :email, type: 'email', class:'form-control ', placeholder:'Email'%>
           </div>

           <div class="password-field" style="height: 4rem;">
             <%= form.password_field :password, class:'form-control ', placeholder:'Password'%>
           </div>
         <% end %>
        </div>

       <div class="modal-footer d-inline-flex" style="height: 5rem;">
         <div class="form-group ">
          <button class="btn btn-primary" id="login_button">Sign in</button>
           <%= link_to t(".forgot_password"), new_password_path, class:'btn btn-outline-danger ' %>
         </div>
       </div>

   </div>
 </div>
</div>


<script type="text/javascript">

 $('#myModal').on('shown.bs.modal', function () {
   $('#myInput').trigger('focus')
 })

 $("#login_button").on("click", function() {
  $("#login_form").submit()
 })

</script>